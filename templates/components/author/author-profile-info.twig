{% if current_user.ID == author.ID or isAdministrator %}
<form action="#" method="POST">
{% endif %}
	<table>
		<tr>
			<td class="author-page-table-label">
			Eesnimi
			</td>
			{% if isAdministrator or current_user.ID == author.ID %}
				<td>
					<input autocomplete="off" required type="text" name="first_name" value="{{ author.first_name }}">
					{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.first_name }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Perenimi
			</td>
			{% if current_user.ID == author.ID or isAdministrator %}
				<td>
					<input autocomplete="off" required type="text" name="last_name" value="{{ author.last_name }}">
					{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.last_name }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				E-mail
			</td>
			{% if current_user.ID == author.ID or isAdministrator %}
				<td>
					<input autocomplete="off" required type="email" name="email" value="{{ author.user_email }}">
					{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="email" value="{{ author.user_email }}" disabled>
				</td>
			{% endif %}
		</tr>
		{% if authorCanSeePersonalId or current_user.ID == author.ID %}
			<tr>
				<td class="author-page-table-label">
					Isikukood
				</td>
				{% if current_user.ID == author.ID or isAdministrator %}
					<td>
						<input autocomplete="off" required type="number" name="personal_id" value="{{ author.personal_id }}">
						{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
					</td>
				{% elseif authorCanSeePersonalId %}
					<td>
						<input class="author-input-disabled" type="text" value="{{ author.personal_id }}" disabled>
					</td>
				{% endif %}
			</tr>
		{% endif %}
		<tr>
			<td class="author-page-table-label">
				Telefon
			</td>
			{% if current_user.ID == author.ID or isAdministrator %}
				<td>
					<input autocomplete="off" required type="number" name="phone_number" value="{{ author.phone_number }}">
					{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.phone_number }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Sünnipäev
			</td>
			{% if isAdministrator or current_user.ID == author.ID  %}
				<td>
					<input class="author-page-birthday" required type="date" name="birthday" value="{{ author.birthday | date("Y-m-d") }}">
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.birthday | date("d.m.Y") }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Tudeng
			</td>
			{% if current_user.ID == author.ID or isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.is_student }}" name="is_student">
						<option value="Jah">Jah</option>
						<option value="Ei">Ei</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.is_student }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				TÜ tudeng või vilistlane
			</td>
			{% if current_user.ID == author.ID or isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.is_student_or_graduate }}" name="is_student_or_graduate">
						<option value="Jah">Jah</option>
						<option value="Ei">Ei</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.is_student_or_graduate }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Häälerühm
			</td>
			{% if isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.voice }}" name="voice">
						<option value="I sopran">I sopran</option>
						<option value="II sopran">II sopran</option>
						<option value="I alt">I alt</option>
						<option value="II alt">II alt</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.voice }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Hääle kõrgus
			</td>
			{% if isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.voice_pitch }}" name="voice_pitch">
						<option value="Kõrge">Kõrge</option>
						<option value="Madal">Madal</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.voice_pitch }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Noorlaulja
			</td>
			{% if isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.is_new_singer }}" name="is_new_singer">
						<option value="Ei">Ei</option>
						<option value="Jah">Jah</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.is_new_singer }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Reservlane
			</td>
			{% if isAdministrator %}
				<td class="author-page-select-input">
					<select class="author-page-select" data-current-value="{{ author.in_reserve }}" name="in_reserve">
						<option value="Ei">Ei</option>
						<option value="Jah">Jah</option>
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.in_reserve }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Tiitel
			</td>
			{% if isAdministrator %}
				<td>
					<input autocomplete="off" required type="text" name="title" value="{{ author.title }}">
					{% include 'components/icon.twig' with { name: 'sprite-pencil-fill', modifier: 'edit-user-pencil-icon'} %}
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.title }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Roll veebilehel
			</td>
			{% if isAdministrator and current_user.ID != author.ID %}
				<td>
					<select name="role">
						{% set authorRole = author.roles | list %}
						{% for key, role in listOfRoles %}
							<option
								{% if role == authorRole %}
									selected
								{% endif %}
								value="{{ key }}">{{ role }}
							</option>
						{% endfor %}
					</select>
				</td>
			{% else %}
				<td>
					<input class="author-input-disabled" type="text" value="{{ author.roles | list }}" disabled>
				</td>
			{% endif %}
		</tr>
		<tr>
			<td class="author-page-table-label">
				Registreerimise aeg
			</td>
			<td>
				<input class="author-input-disabled" type="text" value="{{ author.user_registered }}" disabled>
			</td>
		</tr>
	</table>
{% if current_user.ID == author.ID or isAdministrator %}
	<input type="hidden" value="{{ author.ID }}" name="userID">
	<input type="hidden" value="{{ author.user_email }}" name="currentEmail">
	<div class="button-center h-padding-top-lg">
		<input name="editUserInfo" type="submit" value="Muuda infot" class="author-submit-button">
	</div>
	{{ function('wp_nonce_field', 'submit_user_data', 'uform_generate_nonce' )}}
</form>
{% endif %}
