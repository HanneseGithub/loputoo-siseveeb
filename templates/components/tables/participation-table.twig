{% extends "components/tables/table.twig" %}

{% block table_options %}
    data-toggle="table"
{% endblock %}

{% block table_classes %}
  class="naiskoor-table participation-table"
{% endblock %}

{% block table_header %}
  <tr>
    <th class="h-text-center">Pilt</th>
    <th class="h-text-left">Liikme nimi</th>
    <th data-sortable="true" class="h-text-left">Häälerühm</th>
  </tr>
{% endblock %}

{% block table_body %}
  {% for user in users %}
    <tr>
      <td>
        <img class="participation-table__avatar" src="{{ function('get_avatar_url', user.ID) }}">
      </td>
      <td>
        {% if user.first_name is not empty and user.last_name is not empty %}
          {{ user.first_name ~ ' ' ~ user.last_name }}
        {% else %}
          {{ user.display_name }}
        {% endif %}
      </td>
      <td>{{ user.voice }}
    </tr>
  {% endfor %}
{% endblock %}
