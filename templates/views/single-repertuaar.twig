                </div>
                <iframe src="{{ function('retrieve_file_url', post.note_file_3) }}" title="W3Schools Free Online Web Tutorials">
                </iframe>  
            {% endif %}
        </div>
        <div class="audio-music-files">

            {% if post.song_file %}
                <div class="file-header">
                    <div class="song-title-container">
                    <h2 class="h4 h-margin-bottom-lg h-margin-top-lg" >
                        Muusika fail
                        {% if post.song_file_2 %}1{% endif %}:
                        {{ function('retrieve_file_name', post.song_file )}}
                    </h2>
                    <div class="buttons h-padding-bottom-lg">
                        <span title="{{ function('retrieve_file_name', post.song_file )}}">
                            <a href="{{ function('retrieve_file_url', post.song_file) }}"  class="open-in-new-window-button">
                                {% include 'components/icon.twig' with { name: 'sprite-file-music', modifier: 'music-table-icon'} %}
                                Ava uues aknas
                            </a>
                        </span>
                    </div>
                </div>
                </div>
                <audio controls>
                    <source src="{{ function('retrieve_file_url', post.song_file) }}" type="audio/ogg">
                    Your browser does not support the audio element.
                </audio>
            {% endif %}
            {% if post.note_file_2 %}
